<h2>Books search for "test" </h2>

<table class='table table-hover table-inverse'>
    <tr>
      <% if @range == "User" %>
       <th>Image</th>
       <th>Name</th>
      <% else %>
       <th>Image</th>
       <th>Title</th>
       <th>Opinion</th>
      <% end %>
       <th colspan="2"></th>
    </tr>

    <% if @range == "User" %>
    <!-- Userが検索対象の時 -->
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:"50x50" %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>

    <% else %>
      <!-- User以外のモデル(Book)が検索対象の時 -->
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:"50x50" %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    <% end %>


</table>
