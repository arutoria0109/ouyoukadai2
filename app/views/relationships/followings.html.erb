<h1>Follow Users</h1>
<table class='table'>
<% unless user == not_user %>
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
      <th colspan="4"></th>
    </tr>
  </thead>
<% end %>
  
<% @users.each do |user| %>
  <tbody>
  <tr>
  <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
	  <td><%= user.name %></td>
	  <td><%= user.introduction %></td>
    <td>フォロー数: <%= user.followings.count %></td>
    <td>フォロワー数: <%= user.followers.count %></td>
    <td><%= link_to 'Show', user %></td>
  </tr>
  <% end %>
  </tbody>
  </table>

