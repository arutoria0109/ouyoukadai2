                <% book.book_comments.each do |book_comment| %>
                <p>
                <%= image_tag book_comment.user.get_profile_image, size:"50x50" %>
                <% if book_comment.user == current_user %>
                <%= book_comment.comment %>
                <% end %>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-sm btn-danger", method: :delete, remote: true %><br>
                <%= link_to(book.user) do %>
                <%= book_comment.user.name %><br>
                <% end %>
                <% end %>
                </p>



