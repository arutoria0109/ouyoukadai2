<% if user_signed_in? %>

  <div class="search_form">

    <%= form_with url: search_path, method: :get, local: true do |f| %>
    <!--フォームはsearch_show_pathというURLにデータを送信(メソッドはGET)-->
    <%= f.text_field :word %>
    <!--検索フィールド表示-->
    <%= f.select :range, options_for_select([['User'],['Book']]) %>
    <!--ドロップダウンリストの作成。()内は表示させる内容-->
    <%= f.select :search, options_for_select([["完全一致","perfect_match"],["前方一致","forward_match"],["後方一致","backward_match"],["部分一致","purtial_match"]]) %>
    <!--完全一致、前方一致、後方一致、部分一致）ドロップダウンリストを作成-->
    <%= f.submit "検索", class: "btn btn-secondary" %>

    <% end %>

  </div>

<% end %>

